# Aragora API Keys - Copy this file to .env and fill in your values
# Do not commit .env to version control

# AI Provider API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
XAI_API_KEY=your_xai_api_key_here
GROK_API_KEY=your_grok_api_key_here

# OpenRouter (for additional model access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Supabase persistence (optional - enables history tracking on live.aragora.ai)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_key_here

# Webhook integration (optional - for external notifications)
WEBHOOK_URL=https://your-webhook-endpoint.com/aragora
WEBHOOK_SECRET=your_webhook_hmac_secret_here

# Social Media APIs (optional - for trending topics in Pulse module)
# Reddit and HackerNews work without credentials
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Server configuration (optional)
# Unified server runs HTTP API and WebSocket on same port
ARAGORA_PORT=8080
ARAGORA_HOST=0.0.0.0
ARAGORA_ALLOWED_ORIGINS=http://localhost:3000,https://live.aragora.ai

# Environment (development or production)
# Production mode enforces stricter security requirements
ARAGORA_ENVIRONMENT=development

# Data directory (all databases stored here)
# Default: .nomic (relative to working directory)
# Production recommended: /var/lib/aragora or ~/.aragora
ARAGORA_DATA_DIR=.nomic

# JWT Authentication (required in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ARAGORA_JWT_SECRET=your_jwt_secret_here_minimum_32_chars

# Token blacklist backend: memory, sqlite (default), or redis
# Use redis for multi-instance deployments
ARAGORA_BLACKLIST_BACKEND=sqlite
# ARAGORA_REDIS_URL=redis://localhost:6379/0
