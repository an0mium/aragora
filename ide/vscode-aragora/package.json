{
  "name": "aragora",
  "displayName": "Aragora",
  "description": "Control plane for multi-agent deliberation - VS Code integration",
  "version": "0.1.0",
  "publisher": "aragora",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "debate",
    "multi-agent",
    "llm",
    "claude",
    "gpt"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aragora.runDebate",
        "title": "Aragora: Run Debate",
        "category": "Aragora"
      },
      {
        "command": "aragora.runGauntlet",
        "title": "Aragora: Run Gauntlet on Selection",
        "category": "Aragora"
      },
      {
        "command": "aragora.listAgents",
        "title": "Aragora: List Available Agents",
        "category": "Aragora"
      },
      {
        "command": "aragora.showResults",
        "title": "Aragora: Show Recent Results",
        "category": "Aragora"
      },
      {
        "command": "aragora.configure",
        "title": "Aragora: Configure API",
        "category": "Aragora"
      },
      {
        "command": "aragora.submitTask",
        "title": "Aragora: Submit Task to Control Plane",
        "category": "Aragora",
        "icon": "$(play)"
      },
      {
        "command": "aragora.viewAgentHealth",
        "title": "Aragora: View Agent Health",
        "category": "Aragora",
        "icon": "$(pulse)"
      },
      {
        "command": "aragora.showControlPlane",
        "title": "Aragora: Open Control Plane",
        "category": "Aragora",
        "icon": "$(dashboard)"
      },
      {
        "command": "aragora.refreshFleet",
        "title": "Aragora: Refresh Fleet Status",
        "category": "Aragora",
        "icon": "$(refresh)"
      },
      {
        "command": "aragora.refreshControlPlane",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "aragora.registerAgent",
        "title": "Aragora: Register Agent",
        "category": "Aragora"
      },
      {
        "command": "aragora.cancelTask",
        "title": "Aragora: Cancel Task",
        "category": "Aragora"
      }
    ],
    "configuration": {
      "title": "Aragora",
      "properties": {
        "aragora.apiUrl": {
          "type": "string",
          "default": "https://api.aragora.ai",
          "description": "Aragora API URL"
        },
        "aragora.apiKey": {
          "type": "string",
          "default": "",
          "description": "Aragora API Key"
        },
        "aragora.defaultAgents": {
          "type": "string",
          "default": "claude,gpt-4",
          "description": "Default agents for debates (comma-separated)"
        },
        "aragora.defaultRounds": {
          "type": "number",
          "default": 3,
          "description": "Default number of debate rounds"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aragora",
          "title": "Aragora",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aragora": [
        {
          "id": "aragora.controlPlane",
          "name": "Control Plane"
        },
        {
          "id": "aragora.activeDeliberations",
          "name": "Active Deliberations"
        },
        {
          "id": "aragora.debates",
          "name": "Recent Debates"
        },
        {
          "id": "aragora.agents",
          "name": "Agents"
        },
        {
          "id": "aragora.tasks",
          "name": "Task Queue"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "aragora.controlPlane",
        "contents": "Connect to Aragora Control Plane to manage multi-agent deliberation.\n[Configure API](command:aragora.configure)\n[Open Control Plane](command:aragora.showControlPlane)"
      },
      {
        "view": "aragora.activeDeliberations",
        "contents": "No active deliberations.\n[Start New Debate](command:aragora.runDebate)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aragora.runGauntlet",
          "when": "editorHasSelection",
          "group": "aragora"
        }
      ],
      "view/title": [
        {
          "command": "aragora.refreshControlPlane",
          "when": "view == aragora.controlPlane",
          "group": "navigation"
        },
        {
          "command": "aragora.submitTask",
          "when": "view == aragora.tasks",
          "group": "navigation"
        },
        {
          "command": "aragora.runDebate",
          "when": "view == aragora.debates || view == aragora.activeDeliberations",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aragora.viewAgentHealth",
          "when": "viewItem == agent",
          "group": "inline"
        },
        {
          "command": "aragora.cancelTask",
          "when": "viewItem == task",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aragora/aragora"
  },
  "license": "MIT"
}
