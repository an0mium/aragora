{
  "name": "aragora",
  "displayName": "Aragora",
  "description": "Control plane for multi-agent robust decisionmaking - VS Code integration with rich code analysis",
  "version": "0.2.0",
  "publisher": "aragora",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Linters"
  ],
  "keywords": [
    "ai",
    "debate",
    "multi-agent",
    "llm",
    "claude",
    "gpt",
    "code-review",
    "security"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aragora.runDebate",
        "title": "Aragora: Run Debate",
        "category": "Aragora"
      },
      {
        "command": "aragora.runGauntlet",
        "title": "Aragora: Run Gauntlet on Selection",
        "category": "Aragora"
      },
      {
        "command": "aragora.listAgents",
        "title": "Aragora: List Available Agents",
        "category": "Aragora"
      },
      {
        "command": "aragora.showResults",
        "title": "Aragora: Show Recent Results",
        "category": "Aragora"
      },
      {
        "command": "aragora.configure",
        "title": "Aragora: Configure API",
        "category": "Aragora"
      },
      {
        "command": "aragora.submitTask",
        "title": "Aragora: Submit Task to Control Plane",
        "category": "Aragora",
        "icon": "$(play)"
      },
      {
        "command": "aragora.viewAgentHealth",
        "title": "Aragora: View Agent Health",
        "category": "Aragora",
        "icon": "$(pulse)"
      },
      {
        "command": "aragora.showControlPlane",
        "title": "Aragora: Open Control Plane",
        "category": "Aragora",
        "icon": "$(dashboard)"
      },
      {
        "command": "aragora.refreshFleet",
        "title": "Aragora: Refresh Fleet Status",
        "category": "Aragora",
        "icon": "$(refresh)"
      },
      {
        "command": "aragora.refreshControlPlane",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "aragora.registerAgent",
        "title": "Aragora: Register Agent",
        "category": "Aragora"
      },
      {
        "command": "aragora.cancelTask",
        "title": "Aragora: Cancel Task",
        "category": "Aragora"
      },
      {
        "command": "aragora.explainCode",
        "title": "Aragora: Explain Code",
        "category": "Aragora",
        "icon": "$(lightbulb)"
      },
      {
        "command": "aragora.reviewSelection",
        "title": "Aragora: Review Selection",
        "category": "Aragora",
        "icon": "$(eye)"
      },
      {
        "command": "aragora.generateTests",
        "title": "Aragora: Generate Tests",
        "category": "Aragora",
        "icon": "$(beaker)"
      },
      {
        "command": "aragora.fixIssue",
        "title": "Aragora: Fix Issue",
        "category": "Aragora",
        "icon": "$(wrench)"
      },
      {
        "command": "aragora.addToDebate",
        "title": "Aragora: Add to Debate Context",
        "category": "Aragora",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aragora.showDebatePanel",
        "title": "Aragora: Show Debate Panel",
        "category": "Aragora",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aragora.showReviewPanel",
        "title": "Aragora: Show Review Panel",
        "category": "Aragora",
        "icon": "$(eye)"
      },
      {
        "command": "aragora.quickReview",
        "title": "Aragora: Quick Review",
        "category": "Aragora",
        "icon": "$(eye)"
      },
      {
        "command": "aragora.analyzeWorkspace",
        "title": "Aragora: Analyze Workspace Security",
        "category": "Aragora",
        "icon": "$(shield)"
      },
      {
        "command": "aragora.refreshSecurityTree",
        "title": "Aragora: Refresh Security Findings",
        "category": "Aragora",
        "icon": "$(refresh)"
      },
      {
        "command": "aragora.exportFindings",
        "title": "Aragora: Export Security Findings",
        "category": "Aragora",
        "icon": "$(export)"
      },
      {
        "command": "aragora.improveCode",
        "title": "Aragora: Improve Code",
        "category": "Aragora",
        "icon": "$(sparkle)"
      },
      {
        "command": "aragora.toggleStream",
        "title": "Aragora: Toggle Live Stream",
        "category": "Aragora",
        "icon": "$(broadcast)"
      },
      {
        "command": "aragora.clearDebateContext",
        "title": "Aragora: Clear Debate Context",
        "category": "Aragora"
      },
      {
        "command": "aragora.viewDebateContext",
        "title": "Aragora: View Debate Context",
        "category": "Aragora"
      },
      {
        "command": "aragora.showDebateViewer",
        "title": "Aragora: Show Live Debate Viewer",
        "category": "Aragora",
        "icon": "$(broadcast)"
      },
      {
        "command": "aragora.connectToDeliberation",
        "title": "Aragora: Connect to Deliberation",
        "category": "Aragora"
      },
      {
        "command": "aragora.triggerDeliberation",
        "title": "Aragora: Trigger New Deliberation",
        "category": "Aragora",
        "icon": "$(play)"
      },
      {
        "command": "aragora.connectControlPlane",
        "title": "Aragora: Connect to Control Plane",
        "category": "Aragora"
      },
      {
        "command": "aragora.disconnectControlPlane",
        "title": "Aragora: Disconnect from Control Plane",
        "category": "Aragora"
      }
    ],
    "configuration": {
      "title": "Aragora",
      "properties": {
        "aragora.apiUrl": {
          "type": "string",
          "default": "https://api.aragora.ai",
          "description": "Aragora API URL"
        },
        "aragora.apiKey": {
          "type": "string",
          "default": "",
          "description": "Aragora API Key"
        },
        "aragora.defaultAgents": {
          "type": "string",
          "default": "claude,gpt-4",
          "description": "Default agents for debates (comma-separated)"
        },
        "aragora.defaultRounds": {
          "type": "number",
          "default": 3,
          "description": "Default number of debate rounds"
        },
        "aragora.analyzeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run security analysis when files are saved"
        },
        "aragora.analyzeOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Run security analysis when files are opened"
        },
        "aragora.analyzeOnChange": {
          "type": "boolean",
          "default": false,
          "description": "Run security analysis while typing (debounced)"
        },
        "aragora.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline hints for code actions"
        },
        "aragora.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to WebSocket stream on startup"
        },
        "aragora.ignoredFindings": {
          "type": "array",
          "default": [],
          "description": "List of finding IDs to ignore"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aragora",
          "title": "Aragora",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aragora": [
        {
          "id": "aragora.controlPlane",
          "name": "Control Plane"
        },
        {
          "id": "aragora.security",
          "name": "Security Findings"
        },
        {
          "id": "aragora.activeDeliberations",
          "name": "Active Deliberations"
        },
        {
          "id": "aragora.debates",
          "name": "Recent Debates"
        },
        {
          "id": "aragora.agents",
          "name": "Agents"
        },
        {
          "id": "aragora.tasks",
          "name": "Task Queue"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "aragora.controlPlane",
        "contents": "Connect to Aragora Control Plane to manage multi-agent robust decisionmaking.\n[Configure API](command:aragora.configure)\n[Open Control Plane](command:aragora.showControlPlane)"
      },
      {
        "view": "aragora.activeDeliberations",
        "contents": "No active deliberations.\n[Start New Debate](command:aragora.runDebate)"
      },
      {
        "view": "aragora.security",
        "contents": "No security findings.\n[Analyze Workspace](command:aragora.analyzeWorkspace)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aragora.runGauntlet",
          "when": "editorHasSelection",
          "group": "aragora@1"
        },
        {
          "command": "aragora.explainCode",
          "when": "editorTextFocus",
          "group": "aragora@2"
        },
        {
          "command": "aragora.reviewSelection",
          "when": "editorHasSelection",
          "group": "aragora@3"
        },
        {
          "command": "aragora.generateTests",
          "when": "editorHasSelection",
          "group": "aragora@4"
        },
        {
          "command": "aragora.addToDebate",
          "when": "editorHasSelection",
          "group": "aragora@5"
        }
      ],
      "view/title": [
        {
          "command": "aragora.refreshControlPlane",
          "when": "view == aragora.controlPlane",
          "group": "navigation"
        },
        {
          "command": "aragora.submitTask",
          "when": "view == aragora.tasks",
          "group": "navigation"
        },
        {
          "command": "aragora.runDebate",
          "when": "view == aragora.debates || view == aragora.activeDeliberations",
          "group": "navigation"
        },
        {
          "command": "aragora.refreshSecurityTree",
          "when": "view == aragora.security",
          "group": "navigation@1"
        },
        {
          "command": "aragora.analyzeWorkspace",
          "when": "view == aragora.security",
          "group": "navigation@2"
        },
        {
          "command": "aragora.exportFindings",
          "when": "view == aragora.security",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "aragora.viewAgentHealth",
          "when": "viewItem == agent",
          "group": "inline"
        },
        {
          "command": "aragora.cancelTask",
          "when": "viewItem == task",
          "group": "inline"
        },
        {
          "command": "aragora.fixIssue",
          "when": "viewItem == finding",
          "group": "inline@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aragora.explainCode",
        "key": "cmd+shift+a",
        "mac": "cmd+shift+a",
        "win": "ctrl+shift+a",
        "linux": "ctrl+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "aragora.reviewSelection",
        "key": "cmd+shift+r",
        "mac": "cmd+shift+r",
        "win": "ctrl+shift+r",
        "linux": "ctrl+shift+r",
        "when": "editorHasSelection"
      },
      {
        "command": "aragora.generateTests",
        "key": "cmd+shift+t",
        "mac": "cmd+shift+t",
        "win": "ctrl+shift+t",
        "linux": "ctrl+shift+t",
        "when": "editorHasSelection"
      },
      {
        "command": "aragora.showDebatePanel",
        "key": "cmd+shift+d",
        "mac": "cmd+shift+d",
        "win": "ctrl+shift+d",
        "linux": "ctrl+shift+d"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "build:webview": "cd webview-ui && npm install && npm run build"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aragora/aragora"
  },
  "license": "MIT"
}
