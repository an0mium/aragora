# API proxy is handled by functions/api/[[catchall]].ts (Pages Function)
# Cloudflare Pages _redirects only supports 200 rewrites to internal paths

# SPA-style rewrites for dynamic routes
/debate/:id  /debate/  200
/debates/*  /debates/  200

# Auth shortcuts
/auth  /auth/login  302
/auth/  /auth/login  302

# External docs redirect (mirrors next.config.js redirects for static export)
/docs  https://docs.aragora.ai  302
/docs/*  https://docs.aragora.ai/docs/:splat  302
