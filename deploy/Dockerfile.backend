# Aragora Backend Dockerfile
# Multi-stage build for optimized production image

# Build stage
FROM python:3.11-slim AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy project files for dependency installation
COPY pyproject.toml ./
COPY aragora/ ./aragora/

# Install Python dependencies
RUN pip install --no-cache-dir --user .

# Production stage
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r aragora && useradd -r -g aragora -d /app -s /sbin/nologin aragora

# Copy Python packages from builder
COPY --from=builder /root/.local /home/aragora/.local
ENV PATH=/home/aragora/.local/bin:$PATH

# Copy application code
COPY aragora/ ./aragora/
COPY scripts/ ./scripts/
COPY pyproject.toml ./

# Create data directories and set ownership
RUN mkdir -p /app/data /app/knowledge /app/logs && \
    chown -R aragora:aragora /app

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV ARAGORA_BIND_HOST=0.0.0.0
ENV ARAGORA_DATA_DIR=/app/data
ENV ARAGORA_LOG_DIR=/app/logs

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8080/healthz || exit 1

# Switch to non-root user
USER aragora

# Expose ports
EXPOSE 8080 8765 8766 8767

# Run server (HTTP + WebSocket)
CMD ["python", "-m", "aragora.server", "--host", "0.0.0.0", "--api-port", "8080", "--ws-port", "8765"]
