{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": {"h": 2, "w": 24, "x": 0, "y": 0},
      "id": 1,
      "options": {
        "content": "# SLO Monitoring Dashboard\n\nReal-time SLO compliance tracking, violation alerts, and webhook delivery status.",
        "mode": "markdown"
      },
      "title": "",
      "type": "text"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 99},
              {"color": "green", "value": 99.9}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 2},
      "id": 2,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "100 * sum(rate(aragora_slo_checks_total{passed=\"true\"}[$__rate_interval])) / sum(rate(aragora_slo_checks_total[$__rate_interval]))",
          "refId": "A"
        }
      ],
      "title": "Overall SLO Compliance",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 2},
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {"calcs": ["lastNotNull"]}
      },
      "targets": [
        {"expr": "sum(increase(aragora_slo_violations_total[$__range]))", "refId": "A"}
      ],
      "title": "Total Violations (Period)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}, {"color": "red", "value": 1}]
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 2},
      "id": 4,
      "options": {"colorMode": "value", "graphMode": "none"},
      "targets": [
        {"expr": "sum(increase(aragora_slo_violations_total{severity=\"critical\"}[$__range]))", "refId": "A"}
      ],
      "title": "Critical Violations",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 90},
              {"color": "red", "value": 95}
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 2},
      "id": 5,
      "targets": [
        {"expr": "100 * sum(rate(aragora_webhook_deliveries_total{success=\"true\"}[$__rate_interval])) / sum(rate(aragora_webhook_deliveries_total[$__rate_interval]))", "refId": "A"}
      ],
      "title": "Webhook Delivery Success Rate",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {"defaults": {"unit": "ms"}},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "id": 6,
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}},
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by(le, operation) (rate(aragora_operation_latency_bucket[$__rate_interval])))",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "title": "P99 Latency by Operation",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "id": 7,
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}},
      "targets": [
        {
          "expr": "sum by(severity) (increase(aragora_slo_violations_total[$__rate_interval]))",
          "legendFormat": "{{severity}}",
          "refId": "A"
        }
      ],
      "title": "SLO Violations by Severity",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "id": 8,
      "targets": [
        {
          "expr": "sum by(operation) (increase(aragora_slo_violations_total[$__rate_interval]))",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "title": "Violations by Operation",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {"defaults": {"unit": "s"}},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "id": 9,
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by(le, event_type) (rate(aragora_webhook_delivery_duration_seconds_bucket[$__rate_interval])))",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "title": "Webhook Delivery Latency (P99)",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": ["aragora", "slo", "observability"],
  "templating": {
    "list": [
      {
        "current": {"text": "Prometheus", "value": "prometheus"},
        "hide": 0,
        "name": "datasource",
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": {"from": "now-1h", "to": "now"},
  "title": "Aragora SLO Tracking",
  "uid": "aragora-slo-tracking",
  "version": 1
}
