{
  "name": "Aragora",
  "url": "https://aragora.ai",
  "hook_attributes": {
    "url": "https://your-domain.com/api/v1/webhooks/github"
  },
  "redirect_url": "https://your-domain.com/api/v1/auth/github/callback",
  "callback_urls": [
    "https://your-domain.com/api/v1/auth/github/callback"
  ],
  "setup_url": "https://your-domain.com/integrations/github/setup",
  "description": "Control plane for multi-agent vetted decisionmaking. Auto-trigger code review debates on PRs, triage issues, and analyze code changes.",
  "public": true,
  "default_events": [
    "pull_request",
    "pull_request_review",
    "issues",
    "issue_comment",
    "push"
  ],
  "default_permissions": {
    "contents": "read",
    "issues": "write",
    "pull_requests": "write",
    "metadata": "read",
    "checks": "write",
    "statuses": "write"
  }
}
